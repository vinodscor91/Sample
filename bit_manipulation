#include <iostream>

using namespace std;

int int_to_bin(int x)
{
    if(x<2)
        return x;
    int a = x;
    int n=0;
    while(a)
    {

     n= a%2;
     a=a/2;
    }
    //return x>>1;
    return int_to_bin(x/2) * 10 + x%2;
}
int main()
{
    int num;
    cout << "Hello world!" << endl;
    cout<<"Enter a number: "<<endl;
    cin>>num;
    cout<<"The binary value of "<<num<<" is "<<int_to_bin(num);
    return 0;
}
